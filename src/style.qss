[cssClass~="button"] {
	width: 155px;
	height: 48px;
	color: rgba( 255, 255, 255, 1 );
	background-color: rgba( 59, 138, 186, 1 );
	border: 0px;
	border-radius: 24px;
}
[cssClass~="button"]:disabled {
	color: rgba( 255, 255, 255, .3 );
	background-color: rgba( 0, 0, 0, .3 );
}

[cssClass~="note"] {
	font-size: 10px;
	color: rgba( 255, 255, 255, .3 );
}

[cssClass~="path"] {
	padding-top: 10px;
	font-weight: bold;
	color: rgba( 255, 255, 255, 1 );
}

[cssClass~="change"] {
	color: rgba( 59, 138, 186, 1 );
	background-color: transparent;
	border: 0px;
}

[cssClass~="details"] {
	padding-top: 10px;
	color: rgba( 255, 255, 255, .3 );
}

#settings {
	background-color: rgba( 0, 0, 0, .1 );
	border-radius: 8px;
}

#settings QLabel {
	padding-top: 5px;
	color: rgb( 255, 255, 255 );
}

#settings QCheckBox {
	padding-top: 10px;
	padding-left: 15px;
	padding-bottom: 10px;
}
