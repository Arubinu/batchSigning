QMainWindow {
	background-color: rgba( 240, 240, 240, 255 );
}

QCheckBox::indicator,
QRadioButton::indicator {
	margin: 1px;
	width: 16px;
	height: 16px;
	border: 0px;
}
QCheckBox::indicator:checked {
	image: url(./resources/checkbox_checked.png);
}
QCheckBox::indicator:unchecked {
	image: url(./resources/checkbox_unchecked.png);
}
QRadioButton::indicator:checked {
	image: url(./resources/radio_checked.png);
}
QRadioButton::indicator:unchecked {
	image: url(./resources/radio_unchecked.png);
}

QSpinBox {
	padding: 4px 12px;
	background-color: rgba( 0, 0, 0, .3 );
	color: #fff;
	border: 0px;
	border-radius: 4px;
}
QSpinBox:disabled {
	background-color: rgba( 0, 0, 0, .2 );
	color: #999;
}

#centralWidget {
	color: rgb( 170, 178, 189 );
	font-size: 13px;
	background-color: rgb( 77, 80, 86 );
	border-radius: 5px;
}

#logo {
	width: 281px;
	height: 50px;
	border-image: url(./resources/logo.png) 0 0 0 0 stretch stretch;
}

#cross, #minimize, #maximize {
	margin: 0px;
	padding: 0px;
	background: transparent;
}
#cross {
	border-image: url(./resources/Status_Unavailable_2x.png) 0 0 0 0 stretch stretch;
}
#minimize {
	border-image: url(./resources/Status_Partially_2x.png) 0 0 0 0 stretch stretch;
}
#maximize {
	border-image: url(./resources/Status_None_2x.png) 0 0 0 0 stretch stretch;
}
#cross:hover {
	border-image: url(./resources/Status_Unavailable_2xa.png) 0 0 0 0 stretch stretch;
}
#minimize:hover {
	border-image: url(./resources/Status_Partially_2xa.png) 0 0 0 0 stretch stretch;
}

[cssClass~="separator"] {
	background-color: rgba( 255, 255, 255, 1 );
}
[cssClass~="separator"]:disabled {
	background-color: rgba( 255, 255, 255, .3 );
}

#signature, #gallery, #target, #apply {
	background: transparent;
}
